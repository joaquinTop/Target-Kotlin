<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <!--<item name="spinnerDropDownItemStyle">@style/AppSpinnerLayout</item>-->
        <!--<item name="android:spinnerItemStyle">@style/AppSpinnerLayout</item>-->
        <!--<item name="android:spinnerDropDownItemStyle">@style/AppSpinnerLayout</item>-->
    </style>

    <style name="AppTheme.Dark">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <!--<item name="spinnerDropDownItemStyle">@style/AppSpinnerLayout</item>-->
        <!--<item name="android:spinnerItemStyle">@style/AppSpinnerLayout</item>-->
        <!--<item name="android:spinnerDropDownItemStyle">@style/AppSpinnerLayout</item>-->
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
    </style>

    <style name="AppTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorAccent">@color/defaultTextColor</item>
        <item name="colorControlNormal">@color/defaultTextColor</item>
        <item name="colorControlActivated">@color/defaultTextColor</item>
        <item name="android:textColorHint">@color/defaultTextColor</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextAppearanceError" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/errorRed</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <style name="AppButton">
        <item name="android:layout_marginBottom">@dimen/layout_margin_big</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_big</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="LoadingSpinner" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorAccent</item>
    </style>

    <style name="AppSpinnerLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


</resources>
